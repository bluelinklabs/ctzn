<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>CTZN Admin</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/fontawesome.css">
    <link rel="icon" href="/img/favicon.png">
    <script type="module" src="/js/admin/session.js"></script>
  </head>
  <body class="bg-gray-50 antialiased">
    <div class="bg-white border-b border-gray-300">
      <main class="flex">
        <!-- nav -->
        <a
          class="block px-4 py-4 mr-2 font-medium cursor-pointer border-b {% if topnav == 'dashboard' %}text-pink-600 border-pink-600{% else %}border-transparent{% endif %} hover:text-pink-600 hover:bg-pink-50"
          href="/admin"
        >
          Dashboard
        </a>
        <a
          class="block px-4 py-4 mr-2 font-medium cursor-pointer border-b {% if topnav == 'hyperspace' %}text-pink-600 border-pink-600{% else %}border-transparent{% endif %} hover:text-pink-600 hover:bg-pink-50"
          href="/admin/hyperspace"
        >
          Hyperspace
        </a>
        <a
          class="block px-4 py-4 mr-2 font-medium cursor-pointer border-b {% if topnav == 'users' %}text-pink-600 border-pink-600{% else %}border-transparent{% endif %} hover:text-pink-600 hover:bg-pink-50"
          href="/admin/users"
        >
          Users
        </a>
        <a
          class="block px-4 py-4 mr-2 font-medium cursor-pointer border-b {% if topnav == 'issues' %}text-pink-600 border-pink-600{% else %}border-transparent{% endif %} hover:text-pink-600 hover:bg-pink-50"
          href="/admin/issues"
        >
          Issues <sup id="issue-count">{{issueCount}}</sup>
        </a>
        <a
          class="block px-4 py-4 mr-2 font-medium cursor-pointer border-b {% if topnav == 'debug' %}text-pink-600 border-pink-600{% else %}border-transparent{% endif %} hover:text-pink-600 hover:bg-pink-50"
          href="/admin/debug"
        >
          Debug
        </a>
      </div>
    </div>
    <div>
      <main class="px-2 py-1 bg-white">
        <!-- view -->
        <app-session></app-session>
        {% block view %}View goes here{% endblock %}
      </main>
    </div>
  </body>
</html>
