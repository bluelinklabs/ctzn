{
  "id": "ctzn.network/vote",
  "title": "Vote",
  "description": "An up or down vote on a piece of content",
  "type": "json-table",
  "keyTemplate": [
    {"type": "json-pointer", "value": "/subject/dbUrl"}
  ],
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["subject", "vote", "createdAt"],
    "properties": {
      "subject": {
        "type": "object",
        "required": ["dbUrl"],
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "vote": {
        "type": "number",
        "enum": [-1, 1]
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}