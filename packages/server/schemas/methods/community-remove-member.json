{
  "id": "ctzn.network/methods/community-remove-member",
  "title": "Remove member method",
  "description": "Remove a member from a community.",
  "type": "method",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["member"],
    "properties": {
      "member": {
        "type": "object",
        "required": ["dbUrl", "userId"],
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          },
          "userId": {
            "type": "string",
            "pattern": ".+@.+"
          }
        }
      },
      "ban": {"type": "boolean"},
      "banReason": {"type": "string"}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "banRecord": {
        "type": "object",
        "required": ["key", "url"],
        "properties": {
          "key": {"type": "string"},
          "url": {"type": "string", "format": "uri"}
        }
      }
    }
  }
}