  "type": "method",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["communityDbId"],
    "properties": {
      "communityDbId": {"type": "string"}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["membershipRecord", "memberRecord"],
    "properties": {
      "membershipRecord": {
        "type": "object",
        "required": ["key", "url"],
        "properties": {
          "key": {"type": "string"},
          "url": {"type": "string", "format": "uri"}
        }
      },
      "memberRecord": {
        "type": "object",
        "required": ["key", "url"],
        "properties": {
          "key": {"type": "string"},
          "url": {"type": "string", "format": "uri"}
        }
      }
    }
  }
}