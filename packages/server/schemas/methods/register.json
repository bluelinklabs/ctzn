{
  "id": "ctzn.network/methods/register",
  "title": "Register method",
  "description": "Create a new account on the server.",
  "type": "method",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["username", "email", "password", "displayName"],
    "properties": {
      "username": {"type": "string", "pattern": "^([a-zA-Z][a-zA-Z0-9-]{1,62}[a-zA-Z0-9])$"},
      "email": {"type": "string", "format": "email"},
      "password": {"type": "string", "minLength": 1},
      "displayName": {"type": "string", "minLength": 1, "maxLength": 64},
      "description": {"type": "string", "maxLength": 256}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["url", "dbKey", "username"],
    "properties": {
      "url": {"type": "string", "format": "uri"},
      "dbKey": {"type": "string", "pattern": "^[0-9a-f]{64}$"},
      "username": {"type": "string", "minLength": 3}
    }
  }
}