{
  "id": "ctzn.network/methods/change-password",
  "title": "Change password method",
  "description": "Changes the account's password using a password change-code.",
  "type": "method",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["username", "code", "newPassword"],
    "properties": {
      "username": {"type": "string", "pattern": "^([a-zA-Z][a-zA-Z0-9-]{1,62}[a-zA-Z0-9])$"},
      "code": {"type": "string"},
      "newPassword": {"type": "string", "minLength": 1}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {}
  }
}