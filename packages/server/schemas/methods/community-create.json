{
  "id": "ctzn.network/methods/community-create",
  "title": "Community create method",
  "description": "Creates a new community account.",
  "type": "method",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["username", "displayName"],
    "properties": {
      "username": {"type": "string", "pattern": "^([a-zA-Z][a-zA-Z0-9-]{1,62}[a-zA-Z0-9])$"},
      "displayName": {"type": "string", "minLength": 1, "maxLength": 64},
      "description": {"type": "string", "maxLength": 256}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["dbKey"],
    "properties": {
      "dbKey": {"type": "string", "pattern": "^[0-9a-f]{64}$"}
    }
  }
}