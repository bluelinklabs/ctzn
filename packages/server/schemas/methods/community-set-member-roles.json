{
  "id": "ctzn.network/methods/community-set-member-roles",
  "title": "Set member roles method",
  "description": "Assign or unassign roles to a member of the community.",
  "type": "method",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["member", "roles"],
    "properties": {
      "member": {
        "type": "object",
        "required": ["dbKey"],
        "properties": {
          "dbKey": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
          }
        }
      },
      "roles": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["key", "dbUrl"],
    "properties": {
      "key": {"type": "string"},
      "dbUrl": {"type": "string", "format": "uri"}
    }
  }
}