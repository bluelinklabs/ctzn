{
  "id": "ctzn.network/post",
  "title": "Post",
  "description": "A top-level post",
  "type": "json-table",
  "keyTemplate": [{"type": "auto"}],
  "blobs": {
    "media1": {"maxSize": 512000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media1Thumb": {"maxSize": 256000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media2": {"maxSize": 512000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media2Thumb": {"maxSize": 256000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media3": {"maxSize": 512000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media3Thumb": {"maxSize": 256000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media4": {"maxSize": 512000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media4Thumb": {"maxSize": 256000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media5": {"maxSize": 512000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media5Thumb": {"maxSize": 256000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media6": {"maxSize": 512000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]},
    "media6Thumb": {"maxSize": 256000, "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/svg+xml"]}
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["text", "createdAt"],
    "properties": {
      "text": {
        "type": "string",
        "maxLength": 256
      },
      "media": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "caption": {
              "type": "string"
            }
          }
        }
      },
      "source": {
        "type": "object",
        "required": ["dbUrl"],
        "properties": {
          "dbUrl": {"type": "string", "format": "uri"},
          "author": {
            "type": "object",
            "properties": {
              "displayName": {"type": "string"}
            }
          }
        }
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}