{
  "id": "ctzn.network/vote-idx",
  "title": "Vote Index",
  "description": "Aggregated vote counts on a piece of content",
  "type": "json-table",
  "keyTemplate": [{"type": "json-pointer", "value": "/subject/dbUrl"}],
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["subject", "upvoterDbKeys", "downvoterDbKeys"],
    "properties": {
      "subject": {
        "type": "object",
        "required": ["dbUrl"],
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "upvoterDbKeys": {
        "type": "array",
        "items": {"type": "string", "pattern": "^[0-9a-f]{64}$"}
      },
      "downvoterDbKeys": {
        "type": "array",
        "items": {"type": "string", "pattern": "^[0-9a-f]{64}$"}
      }
    }
  }
}