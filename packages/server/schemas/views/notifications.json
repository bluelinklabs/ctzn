{
  "id": "ctzn.network/views/notifications",
  "title": "Notifications view",
  "description": "Get notification records of a user.",
  "type": "json-view",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "limit": {"type": "number"},
      "lt": {"type": "string"},
      "gt": {"type": "string"},
      "after": {"type": "string", "format": "date-time"},
      "before": {"type": "string", "format": "date-time"}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["notifications"],
    "properties": {
      "notifications": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["author", "blendedCreatedAt", "createdAt", "itemUrl", "key"],
          "properties": {
            "author": {
              "type": "object",
              "required": ["userId"],
              "properties": {
                "userId": {
                  "type": "string",
                  "pattern": ".+@.+"
                }
              }
            },
            "blendedCreatedAt": {"type": "string", "format": "date-time"},
            "createdAt": {"type": "string", "format": "date-time"},
            "item": {"type": "object"},
            "itemUrl": {"type": "string", "format": "uri"},
            "key": {"type": "string"}
          }
        }
      }
    }
  }
}