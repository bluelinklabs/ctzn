{
  "id": "ctzn.network/views/community-user-permissions",
  "title": "Community user permissions view",
  "description": "Get multiple of a user's permissions in a community.",
  "type": "json-view",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["communityId", "citizenId"],
    "properties": {
      "communityId": {"type": "string"},
      "citizenId": {"type": "string"}
    }
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["permissions"],
    "properties": {
      "permissions": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["permId"],
          "properties": {
            "permId": {"type": "string"}
          }
        }
      }
    }
  }
}