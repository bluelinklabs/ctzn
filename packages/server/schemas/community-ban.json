{
  "id": "ctzn.network/community-ban",
  "title": "Community ban",
  "description": "Record of banning from a community.",
  "type": "json-table",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["bannedUser", "createdBy", "createdAt"],
    "properties": {
      "bannedUser": {
        "type": "object",
        "required": ["dbKey"],
        "properties": {
          "dbKey": {
            "type": "string",
            "pattern": "[0-9a-f]{64}"
          }
        }
      },
      "createdBy": {
        "type": "object",
        "required": ["dbKey"],
        "properties": {
          "dbKey": {
            "type": "string",
            "pattern": "[0-9a-f]{64}"
          }
        }
      },
      "reason": {
        "type": "string"
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}