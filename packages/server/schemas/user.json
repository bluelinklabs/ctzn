{
  "id": "ctzn.network/user",
  "title": "User",
  "description": "Record of a user or comunity registered on a ctzn server.",
  "type": "json-table",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["username", "dbKey", "joinDate"],
    "properties": {
      "username": {
        "type": "string",
        "pattern": "^([a-zA-Z][a-zA-Z0-9-]{1,62}[a-zA-Z0-9])$"
      },
      "type": {
        "type": "string",
        "description": "Current values: 'citizen' or 'community'"
      },
      "dbKey": {
        "type": "string",
        "pattern": "^[0-9a-f]{64}$"
      },
      "joinDate": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}