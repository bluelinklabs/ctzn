{
  "id": "ctzn.network/notification",
  "title": "Notification",
  "description": "An index of activity relevant to a given user",
  "type": "json-table",
  "keyTemplate": [
    {"type": "json-pointer", "value": "/idxkey"}
  ],
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["idxkey", "subjectDbKey", "itemUrl", "createdAt"],
    "properties": {
      "idxkey": {
        "type": "string"
      },
      "subjectDbKey": {
        "type": "string",
        "pattern": "^[0-9a-f]{64}$"
      },
      "itemUrl": {
        "type": "string",
        "format": "uri"
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}