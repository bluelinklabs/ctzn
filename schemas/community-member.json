{
  "id": "ctzn.network/community-member",
  "title": "Community member",
  "description": "Record of a user membership in a community.",
  "type": "json",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["user", "joinDate"],
    "properties": {
      "user": {
        "type": "object",
        "required": ["dbUrl", "userId"],
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          },
          "userId": {
            "type": "string",
            "pattern": ".+@.+"
          }
        }
      },
      "roles": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "joinDate": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}