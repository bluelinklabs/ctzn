{
  "id": "ctzn.network/item-class",
  "title": "Item class",
  "description": "A definition for a category of items.",
  "type": "json-table",
  "keyTemplate": [{"type": "json-pointer", "value": "/id"}],
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["id", "keyTemplate", "createdAt"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^([a-zA-Z][a-zA-Z0-9-]*[a-zA-Z0-9])$",
        "minLength": 1,
        "maxLength": 64
      },
      "keyTemplate": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {"type": "string", "enum": ["auto", "json-pointer", "string"]},
            "value": {"type": "string"}
          }
        }
      },
      "definition": {
        "type": "object"
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}